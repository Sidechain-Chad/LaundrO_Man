<h1>Order Tracking</h1>

<p><strong>Status:</strong> <%= @order.status.capitalize %></p>

<ul class="list-group mt-3">
  <% @tracking_updates.each do |update| %>
    <li class="list-group-item">
      <strong><%= update.status.titleize %>:</strong>
      <%= update.notes %> - <%= l(update.created_at, format: :short) %>
    </li>
  <% end %>
</ul>

<%= link_to "Back to Order", order_path(@order), class: "btn btn-sm btn-secondary mt-3" %>
