<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <div class="form-card">
        <div class="text-center mb-4">
          <i class="fa-solid fa-receipt fa-3x text-primary"></i>
          <h1 class="mt-3">Confirm Your Order</h1>
        </div>

        <div class="order-summary">
          <h4 class="summary-title">Order Summary</h4>
          <ul class="order-items-list">
            <% @order.order_items.each do |item| %>
              <li>
                <span><%= item.item_type %> (x<%= item.quantity %>)</span>
                <span>R<%= '%.2f' % item.price %></span>
              </li>
            <% end %>
          </ul>
          <div class="order-total">
            <strong>Total</strong>
            <strong>R<%= '%.2f' % @order.total_price %></strong>
          </div>
        </div>

        <div class="order-actions mt-4">
          <%= form_with(url: confirm_order_path(@order), method: :patch) do |f| %>
            <%= f.submit "Confirm Order", class: "btn btn-primary w-100" %>
          <% end %>
          <div class="sub-actions text-center mt-3">
            <%= link_to "Edit Order", edit_order_path(@order) %>
            <span class="mx-2 text-muted">|</span>
            <%= link_to "Cancel", root_path, class: "text-danger" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
