<div class="page-container">

  <%# HERO SECTION %>
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-image">
        <%= image_tag "Adobe Express - file.png", alt: "LaundryMan Logo" %>
      </div>
      <div class="hero-content">
        <h1>Your One-Stop Laundry Solution</h1>
        <p>Fresh clothes, easy living. Schedule a pickup in minutes.</p>
        <%= link_to laundromats_path, class: "btn btn-primary" do %>
          <i class="bi bi-search"></i> Browse Laundromats
        <% end %>
      </div>
    </div>
  </section>

  <%# This is the corrected and simplified "Our Signature Service" section %>
  <section class="how-it-works">
    <div class="container">
      <h2>Our Signature Service</h2>
      <div class="steps-container">

        <div class="step">
          <div class="step-number">1</div>
          <h3>Place Order</h3>
          <p>Select items and schedule your pickup.</p>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <h3>Pickup</h3>
          <p>Our driver collects your items at your convenience.</p>
        </div>

        <div class="step">
          <div class="step-number">3</div>
          <h3>Clean & Care</h3>
          <p>We provide a professional, high-quality clean.</p>
        </div>

        <div class="step">
          <div class="step-number">4</div>
          <h3>Delivery</h3>
          <p>Fresh, clean clothes delivered right to your door.</p>
        </div>

      </div>
    </div>
  </section>

</div>
